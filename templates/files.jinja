{% extends "admin-base.jinja" %}

{% block title %}
    admin
{% endblock %}

{% block head %}
<style>
    ul {
        font-size: 1.5em;
        font-family: 'Courier New', Courier, monospace;
        list-style-type: none;
        margin: 0;
        padding: 10px;
    }
    li {
        margin-top: 7px;
    }
    li:first-child {
        margin-top: 0;
    }
    a, a:visited {
        color: black;
        text-decoration: none;
        transition: 0.2s;
    }
    a:hover {
        color: #707070;
    }
</style>
{% endblock %}

{% block content %}
<ul>
    {% for file in files %}
    <li>
        {% if isfile(subpath + '/' + file) %}
            <a href="{{ '/edit/' + subpath + '/' + file }}">
        {% else %}
            <a href="{{ (request.path + '/' if request.path != '/' else '') + file }}">
        {% endif %}
            {{ file }}
        </a>
    </li>
    {% endfor %}
</ul>
{% endblock %}
