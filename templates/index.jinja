<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="static/i/favicon.ico">
    <link rel="stylesheet" href="{{ main_css }}">
    <title>Эксперт по безопасности</title>
</head>

<body>
    <input id="expand-navbar-checkbox" type="checkbox" />
    <section class="navbar-section">
        <div class="navbar">
            <div class="epb-logo"><a href="/"><img class="epb-logo-img" src="static/i/epb-logo.jpg" /></a></div>
            <label for="expand-navbar-checkbox" class="expand-navbar-label">
                <div id="nav-icon3" onclick="this.classList.toggle('open');"><span></span><span></span><span></span><span></span></div>
            </label>
            <div class="navbar-links">
                <!-- <div class="text-nowrap"><a href="#about">О нас</a></div> -->
                <!-- <div><a href="#solutions">Решения</a></div> -->
                <!-- <div><a href="#partners">Партнеры</a></div> -->
                <div><a href="#clients"  onclick="follow_navbar_anchor();">Клиенты</a></div>
                <div><a href="#licenses" onclick="follow_navbar_anchor();">Лицензии</a></div>
                <div><a href="#contact"  onclick="follow_navbar_anchor();">Контакты</a></div>
            </div>
        </div>
    </section>

    <div class="heading-2" id="clients">
        Наши Клиенты
    </div>

    <input id="expand-clients-checkbox" type="checkbox" />
    <section class="clients-section">
        <div class="clients">
            {% set max_shown_clients = 16 %}
            {% for filename, description, link in clients %}
                {% if loop.index > max_shown_clients %}
                <div class="hidden-client">
                {% else %}
                <div>
                {% endif %}
                    <a target="_blank" href="{{ link }}" title="{{ description }}">
                        <div class="client-img">
                            {% if loop.index > max_shown_clients %}
                            <img src="static/i/client/{{ filename }}" loading="lazy" />
                            {% else %}
                            <img src="static/i/client/{{ filename }}" />
                            {% endif %}
                        </div>
                    </a>
                </div>
            {% endfor %}
            </div>
    </section>

    <label class="expand-clients-label" for="expand-clients-checkbox">
        <div class="triangle-down"></div>
    </label>

    <section class="licenses-section" id="licenses">
        <div class="heading-2">
            Лицензии
        </div>
        <div class="licenses">
            {% for filename, description in licenses.items() %}
            {% set name, ext = extract_name_and_ext(filename) %}
            <div>
                <div class="license-img">
                    <a target="_blank" href="static/i/license/orig/{{ filename }}"><img
                            src="static/i/license/preview/{{ name }}-preview.{{ ext }}" /></a>
                </div>
                <div class="license-description">{{ description }}</div>
            </div>
            {% endfor %}
        </div>
    </section>

    <section class="yandex-maps-section">
        <div style="position:relative;overflow:hidden;"><a href="https://yandex.ru/maps/213/moscow/?utm_medium=mapframe&utm_source=maps" style="color:#eee;font-size:12px;position:absolute;top:0px;">Москва</a><a href="https://yandex.ru/maps/213/moscow/?from=mapframe&ll=37.664754%2C55.785340&mode=routes&rtext=55.790327%2C37.613799~55.789051%2C37.706964&rtt=pd&ruri=ymapsbm1%3A%2F%2Fgeo%3Fll%3D37.614%252C55.790%26spn%3D0.001%252C0.001%26text%3D%25D0%25A0%25D0%25BE%25D1%2581%25D1%2581%25D0%25B8%25D1%258F%252C%2520%25D0%259C%25D0%25BE%25D1%2581%25D0%25BA%25D0%25B2%25D0%25B0%252C%2520%25D0%259E%25D0%25BA%25D1%2582%25D1%258F%25D0%25B1%25D1%2580%25D1%258C%25D1%2581%25D0%25BA%25D0%25B0%25D1%258F%2520%25D1%2583%25D0%25BB%25D0%25B8%25D1%2586%25D0%25B0%252C%252038%25D0%25BA1~ymapsbm1%3A%2F%2Fgeo%3Fll%3D37.707%252C55.789%26spn%3D0.001%252C0.001%26text%3D%25D0%25A0%25D0%25BE%25D1%2581%25D1%2581%25D0%25B8%25D1%258F%252C%2520%25D0%259C%25D0%25BE%25D1%2581%25D0%25BA%25D0%25B2%25D0%25B0%252C%2520%25D0%25AD%25D0%25BB%25D0%25B5%25D0%25BA%25D1%2582%25D1%2580%25D0%25BE%25D0%25B7%25D0%25B0%25D0%25B2%25D0%25BE%25D0%25B4%25D1%2581%25D0%25BA%25D0%25B0%25D1%258F%2520%25D1%2583%25D0%25BB%25D0%25B8%25D1%2586%25D0%25B0%252C%252024%25D1%25811&source=mapframe&utm_medium=mapframe&utm_source=maps&z=14" style="color:#eee;font-size:12px;position:absolute;top:14px;">Яндекс.Карты</a><iframe src="https://yandex.ru/map-widget/v1/-/CCU5ZHEv8C" height="500" frameborder="0" allowfullscreen="true" style="position:relative; width: 100%;"></iframe></div>
    </section>

    <section class="footer-section">
        <div class="footer-content">
            <div class="years">
                &#169; 2013–<span id="footer-year">2022</span> ЗАО НПП "ЭПБ"<span style="color: #6c757d"><a href="/legal">
                        Правовая
                        информация</a></span>
            </div>
            <div class="contact text-align-right" id="contact">
                +7 (495) 780-35-98
                <br>
                <a href="mailto:info@npp-epb.ru">info@npp-epb.ru</a>
            </div>
        </div>
    </section>

    <script>
        function follow_navbar_anchor() {
            window['expand-navbar-checkbox'].checked = false;
            window['nav-icon3'].classList.remove('open');
        }
        window.onload = function() {
            document.getElementById('footer-year').innerText = new Date().getFullYear();
        };
    </script>
</body>

</html>