{% extends "base.jinja" %}

{% block head %}
<link rel="stylesheet" href="static/glide/glide.core.min.css">
{% endblock %}

{% block title %}Эксперт по безопасности{% endblock %}

{% block content %}
    <section class="solutions-section" id="solutions">
        <div class="solutions">
            <div class="solutions-glide" style="margin: auto;">
                <div data-glide-el="track" class="glide__track">
                    <ul class="glide__slides">
                        {% for filename, title, description, link in solutions_slides %}
                            <div class="glide__slide">
                                <div class="solution-slide" style="background:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url('static/i/solution/{{ filename }}') no-repeat;background-color:#000;background-size:cover;">
                                    <div class="solution-slide-wrapper">
                                        <div class="solution-title">{{ title }}</div>
                                        <div class="solution-description">{{ description }}</div>
                                        <div class="solution-links">
                                            <a href="{{ link }}"><div class="solution-link">ПОДРОБНЕЕ</div></a>
                                            <a href="{{ link }}"><div class="solution-link">ПОЛУЧИТЬ КОНСУЛЬТАЦИЮ</div></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section class="solutions-blocks-section">
        <div class="main-heading">
            Решения
        </div>
        <div class="solution-blocks">
        {% for filename, title, description, link in solutions_blocks %}
        <div class="solution-block" style="background:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url('static/i/solution-block/{{ filename }}') no-repeat;background-color:#000;background-size:cover;">
            <div class="solution-block-wrapper">
                <a href="{{ link }}"><div class="solution-block-title">{{ title }}</div></a>
                <div class="solution-block-description">{{ description }}</div>
                <div class="solution-block-links">
                    <a href="{{ link }}"><div class="solution-block-link">ПОДРОБНЕЕ</div></a>
                    <a href="{{ link }}"><div class="solution-block-link">ПОЛУЧИТЬ КОНСУЛЬТАЦИЮ</div></a>
                </div>
            </div>
        </div>
        {% endfor %}
    </section>

    <section class="licenses-section" id="licenses">
        <div class="main-heading">
            Лицензии
        </div>
        <div class="licenses">
            {% for filename, description in licenses %}
                {% if filename %}
                    {% set name, ext = extract_name_and_ext(filename) %}
                    <div>
                        <div class="license-img">
                            <a target="_blank" href="static/i/license/orig/{{ filename }}"><img
                                src="static/i/license/preview/{{ name }}-preview.{{ ext }}" /></a>
                        </div>
                        <div class="license-description">{{ description }}</div>
                    </div>
                {% else %}
                    <div style="opacity: 0"></div>
                {% endif %}
            {% endfor %}
        </div>
    </section>

    <section class="partners-section" id="partners">
        <div class="main-heading">
            Наши Партнёры
        </div>

        <div class="partners-glide" style="margin: auto;">
            <div data-glide-el="track" class="glide__track">
                <ul class="glide__slides">
                    {% for slide in partners_slides %}
                        <div class="glide__slide">
                            <div class="partners flex">
                                {% for filename, title, description, link in slide %}
                                <div class="partner">
                                    {% if filename %}
                                    <a target="_blank" href="{{ link }}"><img src="static/i/partner/{{ filename }}"></a>
                                    {% endif %}
                                    <div class="partner-info">
                                        <div class="partner-heading">{{ title }}</div>
                                        <div class="partner-description">{{ description }}</div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </section>

    <section class="contact-section" id="contact">
        <div class="yandex-maps">
            <div class="yandex-maps-panel">
                <div class="yandex-maps-panel-heading">
                    Контакты
                </div>
                <div>
                    <span class="change-yandex-maps" onclick="set_yandex_maps_url('CCURE6GY8D')">
                        Главный офис:<br>127018, Москва, ул.Октябрьская, д.38, корп. 1
                    </span>
                </div>
                <div>
                    <span class="change-yandex-maps" onclick="set_yandex_maps_url('CCURECfcCB')">
                        Дополнительный офис:<br>107023, Москва, ул.Электрозаводская, д.24, стр. 1
                    </span>
                </div>
                <div>
                    Тел./факс: +7(495) 780-35-98
                    <br>
                    <a href="mailto:info@npp-epb.ru">info@npp-epb.ru</a>
                </div>
            </div>
            <iframe id="yandex-maps" src="https://yandex.ru/map-widget/v1/-/CCURE6GY8D" height="500" frameborder="0" allowfullscreen="true" style="position:relative; width: 100%;"></iframe>
        </div>
    </section>
    <script>
        function set_yandex_maps_url(url) {
            const yandex_maps = document.getElementById('yandex-maps');
            yandex_maps.src = `https://yandex.ru/map-widget/v1/-/${url}`;
        }
    </script>
    <script src="static/glide/glide.min.js"></script>
    <script>
        new Glide('.solutions-glide', {
            autoplay: 7000,
        }).mount();
        new Glide('.partners-glide', {
            autoplay: 8000,
            swipeThreshold: 20,
            touchAngle: 30,
        }).mount();
    </script>
{% endblock %}
